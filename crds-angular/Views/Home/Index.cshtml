@using System.Web.Optimization
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en" ng-app="crossroads">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/sass/main.css" rel="stylesheet" />
    @Styles.Render("~/bundles/growl-css")
</head>

<body ng-controller="appCtrl">
    <div growl class="crossroads-growl"></div>
    <div>
        <header>
            <div class="overlay-container"></div>
            <!-- Brand Bar -->
            <div class="brandbar-container">
                <div class='brandbar'>
                    <span class='b01'></span>
                    <span class='b02'></span>
                    <span class='b03'></span>
                    <span class='b04'></span>
                    <span class='b05'></span>
                    <span class='b06'></span>
                    <span class='b07'></span>
                    <span class='b08'></span>
                    <span class='b09'></span>
                    <span class='b10'></span>
                    <span class='b11'></span>
                    <span class='b12'></span>
                    <span class='b13'></span>
                    <span class='b14'></span>
                </div>
                <div class='brandbar-second'>
                    <span class='b01'></span>
                    <span class='b02'></span>
                    <span class='b03'></span>
                    <span class='b04'></span>
                    <span class='b05'></span>
                    <span class='b06'></span>
                    <span class='b07'></span>
                    <span class='b08'></span>
                    <span class='b09'></span>
                    <span class='b10'></span>
                    <span class='b11'></span>
                    <span class='b12'></span>
                    <span class='b13'></span>
                    <span class='b14'></span>
                </div>
            </div>
            <div id="menu">
                <div class="container">
                    <div class="row">
                        <div class="col-xs-12 menu__container">
                            <div class="navbar-header"> 
                                <a class="navbar-brand logo" href="/"><img src="//crossroads-media.s3.amazonaws.com/images/logo.svg" alt="crossroads"></a>
                                <ul class="navbar--login list-unstyled">
                                    <span id="current-user" class="hidden-md hidden-sm hidden-xs" ng-if="!showLoginButton"> {{$root.username}} </span>
                                    <li ng-show="!showLoginButton" class="hidden-md hidden-sm hidden-xs">
                                        <a href="#/home" ng-click="logout()">Sign Out</a>
                                    </li>
                                    <li class="hidden-xs hidden-sm" data-toggle="dropdown" ng-show="showLoginButton">
                                        <button class="btn btn-primary" id="form-toggle" ng-click="toggleDesktopLogin()">
                                            <span>Login</span>
                                        </button>
                                    </li>
                                    <li>
                                        <ul class="navbar--login__dropdown list-unstyled col-md-3 soft-top soft-sides" role="menu" aria-labelledby="dropdownMenu1" ng-class="{toggleOpen: loginShow}">
                                            <li role="presentation">
                                                <div class="navbar--login__container">
                                                    <login-form></login-form>
                                                </div>
                                             </li>
                                        </ul>
                                   </li>
                               </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </header>
        <div id="container" hide-on-mobile-menu>
            <div class="container">
                <div class="row">

                    <div class="col-md-12">

                        <div class="home" id="home">
                            <div class="row">
                                <div class="col-sm-8">
                                    <h1 class="home-header brand-font">Welcome</h1>
                                    <h2 class="tagline subheading">
                                        Whatever your thoughts on church, whatever<br class="hidden-xs"> your beliefs about God, you are welcome here.
                                    </h2>
                                    <a href="/explore" class="btn btn-default btn-lg">Get To Know Us</a>
                                </div>
                                <div class="col-sm-4">
                                    <img class="img-responsive hidden-xs coffee-cup" src="//crossroads-media.s3.amazonaws.com/images/coffee_cup.jpg" alt="Coffee Cup">
                                </div>
                            </div>
                        </div>
                        <div ui-view></div>
                    </div>
                </div>
                    
            </div>  <!-- /container -->
            <footer>
                <div class="container">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="col-sm-3">
                                <img class="img-responsive">
                            </div>
                            <div class="col-sm-9">
                                <h5 class="series-title">
                                    <strong>
                                        Current Series
                                    </strong>
                                </h5>
                                <p class="series-description"></p>
                                <br>
                                <a href="">View Messages</a>
                            </div>
                        </div>
                        <div class="col-sm-3 open">
                            <h5><strong>We’re Open.</strong></h5>
                            3500 Madison Open<br>
                            Free coffee, free Wi-Fi,
                            and plenty of couches.<br>
                            <a href="/oakley">Come on Over.</a>
                        </div>
                        <div class="col-sm-3 office">
                            <h5><strong>Our Office:</strong></h5>
                            3500 Madison Road<br>
                            Cincinnati, OH 45209<br>
                            513.731.7400<br>
                            <a href="/prayerrequest">Submit a Prayer Request</a>
                            <br>
                            <br>
                            <a href="/servicetimesanddirections">Service Times &amp; Directions</a>
                            <br>
                            <br>
                            <a href="/contact">
                                Contact Us | <a href="/privacypolicy">Privacy Policy</a>
                                <br>
                                <br>
                                <img src="//crossroads-media.s3.amazonaws.com/images/coc_logo.png" alt="Partner of Church of Cincinnati">
                        </div>
                    </div>
                </div>
            </footer>
        </div>

    </div>

    @Scripts.Render("~/bundles/underscore")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/modules")
    @Scripts.Render("~/bundles/crossroads.net")
</body>
</html>